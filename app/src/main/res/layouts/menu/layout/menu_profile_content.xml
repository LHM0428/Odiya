<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuProLayout">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/menuProImg"
        android:src="@drawable/menu_cup"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="아메리카노"
        android:id="@+id/menuProTitle"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/menuProImg" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/cntMinus"
        android:layout_below="@+id/menuProTitle"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cntEdit"
        android:layout_alignBottom="@+id/cntMinus"
        android:layout_toEndOf="@+id/cntMinus"
        android:hint="0"
        android:gravity="center"
        android:text="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/cntPlus"
        android:layout_below="@+id/menuProTitle"
        android:layout_toEndOf="@+id/cntEdit"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuProImg"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuProSpin1"
            android:spinnerMode="dropdown"
            android:longClickable="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/menuProSpin2"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuProSpin2"
            android:spinnerMode="dropdown"
            android:longClickable="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/menuProSpin2"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:longClickable="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/menuProSpin2"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

</RelativeLayout>
